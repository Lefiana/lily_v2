{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/globals.css" 
  ],
  "exclude": [
    "node_modules"
  ]
}